 <section class="login_part section_padding " style="padding: 60px;">
        <div class="container">
            <div class="row align-items-center">
                
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>Add Product<br>
                                </h3>


                            <form class="row contact_form" action="/login/clerkedit/{{_id}}" method="post" enctype="multipart/form-data">
                                <h2>{{error}}</h2>
                                <div class="col-md-12 form-group p_star">
                                    <p>Product name</p>
                                    <input type="text" class="form-control" id="name" name="product_name"
                                      required  placeholder="Enter product name" value='{{product_name}}'>
                                </div>

                                <div class="col-md-12 form-group p_star">
                                    <p>Product Price</p>
                                    <input type="number" class="form-control" id="name" name="product_price"
                                      required  placeholder="Enter product price" value='{{product_price}}'>
                                </div>

                                <div class="col-md-12 form-group p_star">
                                    <p>Product Quantity</p>
                                    <input type="number" class="form-control" id="name" name="product_quantity"
                                       required placeholder="Enter product quantity" value='{{product_quantity}}'>
                                </div>

                                <div class="col-md-12 form-group p_star">
                                    <p>Product description</p>
                                    <textarea rows="5" cols="40" type="text" class="form-control" id="name" name="product_description"
                                      required  placeholder="Enter product description">{{product_description}}</textarea>
                                </div>

                                <div class="col-md-12 form-group p_star">
                                    <p>Current picture:</p>
                                    <img src="../../img/{{this.p_Pic}}" alt="image" class="img-fluid">                                    
                                    <p>Upload picture:</p>
                                    <input type = "file" name="product_picture">
                                    
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="category0" value="Home" checked>
                                    <label class="form-check-label" for="category0">
                                        Home Appliances
                                    </label>
                                    </div>

                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="category1" value="Electronics">
                                    <label class="form-check-label" for="category1">
                                        Electronics
                                    </label>
                                    </div>
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="category2" value="Decor">
                                    <label class="form-check-label" for="category2">
                                        Decor
                                    </label>
                                    </div>
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="category3" value="Cosmetic">
                                    <label class="form-check-label" for="category3">
                                        Cosmetics
                                    </label>
                                    

                                    </div>

                                </div>

                               
                                    
                                <div class="col-md-12 form-group p_star">

                                    <input type="checkbox" class="form-control" id="best" name="isBest"
                                        style="height: 15px;width: 15px;" value="true">
                                        <label for="isBest" >Best seller </label>
                                </div>
                                
                                <div class="col-md-12 form-group">
                                    

                                <div id="legalTextRow" class="a-row a-spacing-top-medium a-size-small">
                                            By continuing, you agree to Amazon's <a
                                                href="/gp/help/customer/display.html/ref=ap_signin_notification_condition_of_use?ie=UTF8&amp;nodeId=918816">Conditions
                                                of Use</a> and <a
                                                href="/gp/help/customer/display.html/ref=ap_signin_notification_privacy_notice?ie=UTF8&amp;nodeId=918814">Privacy
                                                Notice</a>.
                                        </div>

                                    <button type="submit" value="submit" class="btn_3">
                                        UPDATE
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>